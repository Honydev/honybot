{{#partial "stylesheets"}}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400italic,600,700%7COpen+Sans:300,400,400italic,600,700">

        <!-- Bootstrap and OneUI CSS framework -->
        <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
        <link rel="stylesheet" id="css-main" href="/assets/css/oneui.css">
     <link rel="stylesheet" type="text/css" href="/css/custom.css">
{{/partial}}

{{#partial "javascript"}}
        <script src="/assets/js/core/jquery.min.js"></script>
        <script src="/assets/js/core/bootstrap.min.js"></script>
        <script src="/assets/js/core/jquery.slimscroll.min.js"></script>
        <script src="/assets/js/core/jquery.scrollLock.min.js"></script>
        <script src="/assets/js/core/jquery.appear.min.js"></script>
        <script src="/assets/js/core/jquery.countTo.min.js"></script>
        <script src="/assets/js/core/jquery.placeholder.min.js"></script>
        <script src="/assets/js/core/js.cookie.min.js"></script>
        <script src="/assets/js/app.js"></script>
{{/partial}}

{{#partial "content"}}

<!-- Page Header -->
<div class="content bg-image" 
	{{#if banner}}
		style="background-image: url('{{banner}}');
		">
	{{else}}
		style="background-image: url('https://web-cdn.ttvnw.net/images/xarth/bg_glitch_pattern.png');
		background-size: auto;">
	{{/if}}
    <div class="push-50-t push-15 clearfix">
        <div class="push-15-r pull-left">
            <img class="img-avatar img-avatar-thumb" src="{{logo}}" alt="">
        </div>
        <h1 class="h2 text-white push-5-t">{{name}}</h1>
        <h2 class="h5 text-white-op"><a class="text-white" href="https://www.twitch.tv/{{name}}">twitch.tv/{{name}}</a></h2>
    </div>
</div>

<!-- END Page Header -->


<!-- Page Content -->
<div class="content content-boxed">
  {{#if rewards}}
	  {{#each rewards}}
	  		<!-- START reward -->
			<div class="block block-themed">
				<div class="block-header bg-primary-darker">
				</div>
				<div class="block-content" style="padding: 20px 10px">
					<div style="display: table; width: 100%">
						<div style="display: table-cell; vertical-align: middle; text-align: center; padding: 0 10px; width: 15%;">
						
							{{#if hasImage}} <img src="{{image_url}}" width="100"
								height="100" /> 
							{{else}} 
								<img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Human-emblem-star-black-128.png"
									width="100" height="100" /> 
							{{/if}}
						</div>
						
						<div style="display: table-cell; vertical-align: middle; padding: 0 10px">
							<h3>{{title}}</h3>
							<p>{{description}}</p>
							<h4>Command: <span class="text-danger">{{command}}</span> [comment]</h4>
							<span>VIP required: <span class="text-danger">{{vip}}</span></span>
						</div>
						<div style="display: table-cell; vertical-align: middle; padding: 0 10px; width: 15%;">
							<div class="text-center">
								<h2 class="text-warning">{{cost}}</h3>
								<h2>{{pointsname}}</h3>
							</div>
						</div>						
					</div>
				</div>
			</div>
			<!-- END reward -->
	  {{/each}}
  {{else}}
  	<!-- START no rewards found -->
	<div class="block block-bordered">
		  <div class="block-header bg-primary-darker"></div>
		  <div class="block-content">
			<!-- Basic Info -->
			<div class="block-content text-center overflow-hidden">
				<div class="push">
				  <span class="fa-stack fa-5x">
					<i class="si si-badge fa-stack-1x" style="font-size: 100px; font-weight: 700; top: 15px;"></i>
					<i class="si si-ban fa-stack-2x text-danger"></i>
					</span>
				</div>
				<div class="push-30">
					<h3 class="h3 text-muted">No rewards created yet</h3>
				</div>
			</div>
			<!-- END Basic Info -->
		  </div>
	  </div>
	</div>
	<!-- END no rewards found -->
  {{/if}}
  

</div>

{{/partial}}

